<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Roazhone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/roazhone_blue</item>
        <item name="colorPrimaryVariant">@color/roazhone_blue_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/roazhone_grey_4</item>
        <item name="colorSecondaryVariant">@color/roazhone_grey_5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@color/roazhone_grey_4</item>
        <item name="android:imageButtonStyle">@color/roazhone_grey_4</item>
    </style>
</resources>