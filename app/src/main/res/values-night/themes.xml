<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Roazhone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSurface">@color/roazhone_dark_blue</item>
        <item name="colorPrimary">@color/roazhone_yellow</item>
        <item name="colorPrimaryDark">@color/roazhone_dark_blue_2</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/roazhone_dark_blue</item>
        <item name="colorAccent">@color/roazhone_light_blue</item>
    </style>

    <style name="BackgroundFragment" parent="">
        <item name="android:background">@color/black</item>
    </style>
    <style name="Card" parent="">
        <item name="android:background">@color/roazhone_grey_6</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Direction_icon" parent="">
        <item name="backgroundTint">@color/roazhone_grey_6</item>
        <item name="tint">@color/roazhone_yellow</item>
    </style>
    <style name="Bottom_bar" parent="">
        <item name="android:background">@color/roazhone_dark_blue_1.2</item>
        <item name="itemIconTint">@drawable/bottom_navigation_colors_dark</item>
        <item name="itemTextColor">@drawable/bottom_navigation_colors_dark</item>
    </style>
    <style name="float_direction_icon" parent="">
        <item name="backgroundTint">@color/roazhone_yellow</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="parking_name" parent="">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="favorite_star" parent="">
        <item name="android:tint">@color/roazhone_light_blue</item>
    </style>
</resources>